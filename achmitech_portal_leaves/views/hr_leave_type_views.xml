<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add client approval fields to leave type form, after leave_validation_type -->
    <record id="hr_leave_type_view_form_client_approval" model="ir.ui.view">
        <field name="name">hr.leave.type.form.client.approval</field>
        <field name="model">hr.leave.type</field>
        <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='leave_validation']" position="after">
                <group name="client_approval_config" string="Approbation client (IntÃ©rimaires)">
                    <field name="require_client_approval" widget="boolean_toggle"/>
                    <field name="notify_client_on_confirm" widget="boolean_toggle"/>
                    <field name="client_response_deadline_days"
                           invisible="not require_client_approval"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
