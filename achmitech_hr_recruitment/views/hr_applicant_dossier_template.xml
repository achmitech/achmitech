<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="dossier_form" name="Dossier de compétences">
        <t t-call="website.layout">
            <div id="wrap" class="container my-5">

                <h2 class="mb-4">
          Dossier de compétences
                </h2>

                <p>
          Bonjour <strong t-esc="candidate.partner_name"/>, merci de compléter votre dossier de compétences.
                </p>

                <form id="dossier_form" action="/dossier/submit" method="post" class="o_website_form">

                    <!-- CSRF -->
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <input type="hidden" name="token" t-att-value="candidate.dca_access_token"/>

                    <h4 class="mt-4">Formation, habilitations &amp; langues</h4>

                    <table class="table table-bordered mt-3">
                        <tbody>
                            <tr>
                                <th style="width: 30%;">Formation</th>
                                <td>
                                    <div class="repeat-section" data-scope="formations" data-next-index="1">
                                        <div class="repeat-lines">
                                            <div class="row mb-2 repeat-line">
                                                <div class="col-5">
                                                    <label>Intitulé</label>
                                                    <input type="text" class="form-control" name="formations_title_0" data-index="0" required="required" placeholder="Ex: Formation Scrum / Odoo / AWS..." />
                                                </div>

                                                <div class="col-3">
                                                    <label>Date début</label>
                                                    <input type="date" class="form-control" name="formations_start_0" data-index="0" />
                                                </div>

                                                <div class="col-3">
                                                    <label>Date fin</label>
                                                    <input type="date" class="form-control" name="formations_end_0" data-index="0" />
                                                </div>

                                                <div class="col-1 d-flex align-items-end">
                                                    <button type="button" class="btn btn-danger remove-line rounded-pill">×</button>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="mt-2">
                                            <button type="button" class="btn btn-sm btn-primary rounded-pill add-repeat-line">
                                        + Ajouter une formation
                                            </button>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th style="width: 30%;">Habilitations</th>
                                <td>
                                    <div class="repeat-section" data-scope="habilitations" data-next-index="1">
                                        <div class="repeat-lines">
                                            <div class="row mb-2 repeat-line">
                                                <div class="col-11">
                                                    <input type="text" class="form-control" name="habilitations_title_0" data-index="0" placeholder="Ex: Habilitation électrique, SST, CACES..." />
                                                </div>

                                                <div class="col-1 d-flex align-items-end">
                                                    <button type="button" class="btn btn-danger remove-line rounded-pill">×</button>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="mt-2">
                                            <button type="button" class="btn btn-sm btn-primary rounded-pill add-repeat-line">
                                        + Ajouter une ligne
                                            </button>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <h4 class="mt-4">Projets, réalisations &amp; responsabilités</h4>


                    <div class="repeat-section experiences-section" data-scope="experiences" data-next-index="1">
                        <div class="repeat-lines">

                            <div class="experience-block repeat-line" data-index="0">
                                <!-- Header Projet -->
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h5 class="experience-title">Projet 1</h5>
                                    <button type="button" class="btn btn-danger btn-sm rounded-pill remove-experience">×</button>
                                </div>
                                <!-- INFOS GÉNÉRALES -->
                                <div class="row mb-3">
                                    <div class="col-6">
                                        <label>Entreprise</label>
                                        <input type="text" class="form-control" name="experiences_company_0" placeholder="Ex: ACHMITECH" required="required"/>
                                    </div>

                                    <div class="col-3">
                                        <label>Date début</label>
                                        <input type="date" class="form-control" name="experiences_start_0"/>
                                    </div>

                                    <div class="col-3">
                                        <label>Date fin</label>
                                        <input type="date" class="form-control" name="experiences_end_0"/>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-6">
                                        <label>Poste occupé</label>
                                        <input type="text" class="form-control" name="experiences_poste_0"/>
                                    </div>
                                    <div class="col-6">
                                        <label>Rôle</label>
                                        <input type="text" class="form-control" name="experiences_role_0"/>
                                    </div>
                                </div>
                                <!-- TEXTES -->
                                <div class="mb-2">
                                    <label>Contexte général</label>
                                    <textarea class="form-control" name="experiences_contexte_0" rows="2"></textarea>
                                </div>

                                <div class="mb-2">
                                    <label>Sujet du projet</label>
                                    <textarea class="form-control" name="experiences_sujet_0" rows="2"></textarea>
                                </div>

                                <div class="mb-2">
                                    <label>Travail réalisé</label>
                                    <textarea class="form-control" name="experiences_travail_0" rows="3"></textarea>
                                </div>

                                <div class="mb-3">
                                    <label>Résultats obtenus</label>
                                    <textarea class="form-control" name="experiences_resultats_0" rows="2"></textarea>
                                </div>


                                <!-- Environnement technique (copie de ta table, mais SCOPÉE) -->
                                <h6 class="mt-3">Environnement technique</h6>

                                <table class="table table-sm table-bordered mt-3">
                                    <tbody>
                                        <t t-foreach="skill_types['skill_types']" t-as="type">
                                            <tr>
                                                <th style="width: 30%;">
                                                    <t t-esc="type['name']"/>
                                                </th>
                                                <td>
                                                    <div class="competency-section" t-att-data-scope="'experiences_0_%s' % type['code']" data-next-index="1">
                                                        <div class="competency-lines">
                                                            <div class="row mb-2 competency_line">
                                                                <div class="col-7">
                                                                <!-- ATTENTION: data-categoey is id of the category of competences in our backend -->
                                                                    <select class="form-control skill-select rounded-pill" t-att-name="'experiences_0_%s_skill_id_0' % type['code']" t-att-data-category="type['id']" data-index="0">
                                                                        <option value="" disabled="true" selected="true">Choisir une compétence</option>
                                                                    </select>
                                                                </div>

                                                                <div class="col-4">
                                                                    
                                                                    <select class="form-control level-select rounded-pill" t-att-name="'experiences_0_%s_skill_level_0' % type['code']" data-index="0" disabled="1">
                                                                        <option value="" disabled="true" selected="true">Choisir un niveau</option>
                                                                    </select>
                                                                </div>

                                                                <div class="col-1 d-flex align-items-end">
                                                                    <button type="button" class="btn btn-danger remove-line rounded-pill">×</button>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="mb-3">
                                                            <button type="button" class="btn btn-sm btn-primary rounded-pill add-competency-line">
                                                    + Ajouter une ligne
                                                            </button>
                                                        </div>
                                                    </div>

                                                </td>
                                            </tr>
                                        </t>
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="mt-2">
                            <button type="button" class="btn btn-sm btn-primary rounded-pill add-experience-line">
                                + Ajouter une expérience
                            </button>
                        </div>
                    </div>


                    <div class="mt-4 text-end">
                        <button type="submit" class="btn btn-primary">
                                        Soumettre mon dossier
                        </button>
                    </div>
                </form>
            </div>
        </t>
    </template>


    <template id="dossier_thankyou" name="Thank you (Dossier)" t-name="achmitech_hr_recruitment.dossier_thankyou">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="oe_structure"/>
                <div id="dossier_thankyou" class="container">
                    <div class="row pt24 pb24">
                        <!-- Main content -->
                        <div class="col pt24 pb24 text-center">
                            <h1 class="fw-bolder">Merci !</h1>

                            <p class="fw-light pb24">
                                Votre dossier de compétences a été envoyé avec succès.<br class="mb-2"/>
                                Notre équipe reviendra vers vous dès que possible.
                            </p>

                            <!-- same image style (you can replace the src with your own asset) -->
                            <img class="img-fluid o_we_custom_image"
                                 style="width: 30% !important;"
                                 src="/website_hr_recruitment/static/src/img/job_congratulations.svg"
                                 alt="Merci"/>

                            <div class="row" id="dossier_thank_cta">
                                <div class="col-lg-12 text-center mt32 mb48">
                                    <p>
                                        <span class="h5 fw-light">En attendant,</span><br/>
                                        <span class="h3 mt8 mb32 fw-bold">Découvrez notre univers :</span>
                                    </p>

                                    <a role="button" href="/" class="btn btn-primary btn-lg">Accueil</a>
                                    <a role="button" href="https://www.achmitech.com/contact" class="btn btn-primary btn-lg ms-3">Contact</a>
                                    <a role="button" href="/jobs" class="btn btn-primary btn-lg ms-3">Offres</a>
                                </div>
                            </div>
                        </div>

                        <!-- Optional recruiter block (similar to Odoo default) -->
                        <t t-if="job_sudo and job_sudo.user_id">
                            <div class="col-lg-4 align-self-center ps-4 o_cc o_cc2 rounded">
                                <section class="s_text_block pt24" data-snippet="s_text_block" data-name="Text">
                                    <div class="container">
                                        <p class="text-center mb-0 fs-3 lead">Votre <b>contact</b> :</p>
                                    </div>
                                </section>

                                <section class="s_company_team pt12" data-snippet="s_company_team" data-name="Team">
                                    <div class="container-fluid">
                                        <div class="row justify-content-center">
                                            <div class="o_jobs_hr_recruiter col-10 o_cc o_cc1 mt24 p-4 border border-primary rounded shadow">
                                                <div class="row align-items-center">
                                                    <div class="col-lg-5 pb16 o_not_editable">
                                                        <img t-att-src="image_data_uri(job_sudo.user_id.avatar_256)"
                                                             class="img-fluid" loading="lazy"/>
                                                    </div>
                                                    <div class="col-lg-7 px-1">
                                                        <h2 class="text-truncate" t-field="job_sudo.user_id.name"/>
                                                        <p class="fw-light text-truncate" t-field="job_sudo.user_id.job_title"/>
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <ul class="list-unstyled mb-0">
                                                        <li t-if="job_sudo.user_id.work_phone">
                                                            <i class="fa fa-phone fa-fw me-2"></i>
                                                            <span class="o_force_ltr" t-field="job_sudo.user_id.work_phone"/>
                                                        </li>
                                                        <li class="d-inline-flex align-items-baseline">
                                                            <i class="fa fa-envelope fa-fw me-2"></i>
                                                            <span>
                                                                <a class="text-break"
                                                                   t-attf-href="mailto:#{job_sudo.user_id.email}"
                                                                   t-field="job_sudo.user_id.email"/>
                                                            </span>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </section>

                                <section class="s_text_block pt24" data-snippet="s_text_block" data-name="Text">
                                    <div class="container">
                                        <p class="lead alert px-0">
                                            Nous traitons généralement les dossiers sous <strong>quelques jours</strong>.<br/><br/>
                                            La prochaine étape peut être un appel ou un entretien.<br/><br/>
                                            Si besoin, vous pouvez contacter votre interlocuteur ci-dessus.
                                        </p>
                                    </div>
                                </section>
                            </div>
                        </t>

                    </div>
                </div>
                <div class="oe_structure"/>
            </div>
        </t>
    </template>


    <record model="ir.actions.server" id="action_regenerate_dca_token">
            <field name="name">Regenerate Dossier Token</field>
            <field name="model_id" ref="model_hr_applicant"/>
            <field name="group_ids" eval="[(4, ref('hr_recruitment.group_hr_recruitment_manager'))]"/>
            <field name="binding_model_id" ref="hr_recruitment.model_hr_applicant" />
            <field name="binding_view_types">form</field>
            <field name="state">code</field>
            <field name="code">
if records:
    action = records._regenerate_dca_token()
            </field>
        </record>
</odoo>
