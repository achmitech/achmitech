<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="dossier_form" name="Dossier de compétences">
        <t t-call="website.layout">
            <div id="wrap" class="container my-5">
                <div class="d-flex align-items-center gap-3 mb-4">
                    <img t-att-src="image_data_uri(request.env.company.logo)"
                        class="o_company_logo_small"
                        alt="Logo"/>
                </div>
                <h2 class="mb-4">
          Dossier de compétences
                </h2>

                <p>
          Bonjour <strong t-esc="candidate.partner_name"/>, merci de compléter votre dossier de compétences.
                </p>

                <form id="dossier_form" action="/dossier/submit" method="post" class="o_website_form">

                    <!-- CSRF -->
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <input type="hidden" name="token" t-att-value="candidate.dca_access_token"/>

                    <h4 class="mt-5 mb-3">Formations &amp; habilitations</h4>

                    <table class="table table-bordered mt-3">
                        <tbody>
                            <tr>
                                <th style="width: 30%;">Formation</th>
                                <td>
                                    <t t-set="formation_list" t-value="(dossier and dossier.get('formations')) or [ {} ]"/>
                                        <div class="repeat-section" data-scope="formations"
                                            t-att-data-next-index="str(len(formation_list))">
                                            <div class="repeat-lines">

                                                <t t-foreach="formation_list" t-as="f">
                                                    <div class="row mb-2 repeat-line" t-att-data-index="f_index">
                                                        <div class="col-5">
                                                            <label t-att-for="'formations_title_%s' % f_index">Intitulé</label>
                                                            <input type="text" class="form-control"
                                                                t-att-id="'formations_title_%s' % f_index"
                                                                t-att-name="'formations_title_%s' % f_index"
                                                                t-att-data-index="f_index"
                                                                placeholder="Ex: Formation Scrum / Odoo / AWS..."
                                                                t-att-value="f.get('title') or ''"/>
                                                        </div>

                                                        <div class="col-3">
                                                            <label t-att-for="'formations_start_%s' % f_index">Date début</label>
                                                            <input type="date" class="form-control"
                                                                t-att-id="'formations_start_%s' % f_index"
                                                                t-att-name="'formations_start_%s' % f_index"
                                                                t-att-data-index="f_index"
                                                                t-att-value="f.get('start') or ''"/>
                                                        </div>

                                                        <div class="col-3">
                                                            <label t-att-for="'formations_end_%s' % f_index">Date fin</label>
                                                            <input type="date" class="form-control"
                                                                t-att-id="'formations_end_%s' % f_index"
                                                                t-att-name="'formations_end_%s' % f_index"
                                                                t-att-data-index="f_index"
                                                                t-att-value="f.get('end') or ''"/>
                                                        </div>

                                                        <div class="col-1 d-flex align-items-end">
                                                            <button type="button" class="btn btn-danger remove-line rounded-pill">×</button>
                                                        </div>
                                                    </div>
                                                </t>

                                            </div>

                                            <div class="mt-2">
                                                <button type="button" class="btn btn-sm btn-primary rounded-pill add-repeat-line">
                                                    + Ajouter une formation
                                                </button>
                                            </div>
                                        </div>

                                </td>
                            </tr>
                            <tr>
                                <th style="width: 30%;">Habilitations</th>
                                <td>
                                    <t t-set="hab_list" t-value="(dossier and dossier.get('habilitations')) or [ {} ]"/>
                                    <div class="repeat-section" data-scope="habilitations"
                                        t-att-data-next-index="str(len(hab_list))">
                                        <div class="repeat-lines">

                                            <t t-foreach="hab_list" t-as="h">
                                                <div class="row mb-2 repeat-line" t-att-data-index="h_index">
                                                    <div class="col-11">
                                                        <input type="text" class="form-control"
                                                            t-att-id="'habilitations_title_%s' % h_index"
                                                            t-att-name="'habilitations_title_%s' % h_index"
                                                            t-att-data-index="h_index"
                                                            placeholder="Ex: Habilitation électrique, SST, CACES..."
                                                            t-att-value="h.get('title') or ''"/>
                                                    </div>
                                                 <div class="col-1 d-flex align-items-end">
                                                    <button type="button" class="btn btn-danger remove-line rounded-pill">×</button>
                                                </div>
                                                </div>
                                            </t>

                                        </div>

                                        <div class="mt-2">
                                            <button type="button" class="btn btn-sm btn-primary rounded-pill add-repeat-line">
                                                + Ajouter une habilitation
                                            </button>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <h4 class="mt-5 mb-3">
                        Projets, réalisations &amp; responsabilités
                        <small class="text-muted d-block mt-1">
                            (Expériences — de la plus récente à la plus ancienne)
                        </small>
                    </h4>


                    <div class="repeat-section experiences-section"
     data-scope="experiences"
     t-att-data-next-index="str((dossier and dossier.get('experiences') and len(dossier['experiences'])) or 1)">

    <div class="repeat-lines">

        <!-- Decide list of experiences to render -->
        <t t-set="exp_list" t-value="(dossier and dossier.get('experiences')) or [ {} ]"/>

        <t t-foreach="exp_list" t-as="exp">

            <div class="experience-block repeat-line mb-5 pb-4 border-bottom" t-att-data-index="exp_index">

                <!-- Header Projet -->
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="experience-title">
                        <t t-esc="'Projet %s' % (exp_index + 1)"/>
                    </h5>
                    <button type="button" class="btn btn-danger btn-sm rounded-pill remove-experience">×</button>
                </div>

                <!-- INFOS GÉNÉRALES -->
                <div class="row mb-3">
                    <div class="col-6">
                        <label t-att-for="'experiences_company_%s' % exp_index">Entreprise</label>
                        <input type="text"
                               class="form-control"
                               t-att-id="'experiences_company_%s' % exp_index"
                               t-att-name="'experiences_company_%s' % exp_index"
                               placeholder="Ex: ACHMITECH"
                               t-att-value="exp.get('company') or ''"/>
                    </div>

                    <div class="col-3">
                        <label t-att-for="'experiences_start_%s' % exp_index">Date début</label>
                        <input type="date"
                               class="form-control"
                               t-att-id="'experiences_start_%s' % exp_index"
                               t-att-name="'experiences_start_%s' % exp_index"
                               t-att-value="exp.get('start') or ''"/>
                    </div>

                    <div class="col-3">
                        <label t-att-for="'experiences_end_%s' % exp_index">Date fin</label>
                        <input type="date"
                               class="form-control"
                               t-att-id="'experiences_end_%s' % exp_index"
                               t-att-name="'experiences_end_%s' % exp_index"
                               t-att-value="exp.get('end') or ''"/>
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-6">
                        <label t-att-for="'experiences_poste_%s' % exp_index">Poste occupé</label>
                        <input type="text"
                               class="form-control"
                               t-att-id="'experiences_poste_%s' % exp_index"
                               t-att-name="'experiences_poste_%s' % exp_index"
                               t-att-value="exp.get('poste') or ''"/>
                    </div>
                    <div class="col-6">
                        <label t-att-for="'experiences_role_%s' % exp_index">Rôle</label>
                        <input type="text"
                               class="form-control"
                               t-att-id="'experiences_role_%s' % exp_index"
                               t-att-name="'experiences_role_%s' % exp_index"
                               t-att-value="exp.get('role') or ''"/>
                    </div>
                </div>

                <!-- TEXTES -->
                <div class="mb-2">
                    <label t-att-for="'experiences_contexte_%s' % exp_index">Contexte général</label>
                    <textarea class="form-control"
                              t-att-id="'experiences_contexte_%s' % exp_index"
                              t-att-name="'experiences_contexte_%s' % exp_index"
                              rows="2"><t t-esc="exp.get('contexte') or ''"/></textarea>
                </div>

                <div class="mb-2">
                    <label t-att-for="'experiences_sujet_%s' % exp_index">Sujet du projet</label>
                    <textarea class="form-control"
                              t-att-id="'experiences_sujet_%s' % exp_index"
                              t-att-name="'experiences_sujet_%s' % exp_index"
                              rows="2"><t t-esc="exp.get('sujet') or ''"/></textarea>
                </div>

                <div class="mb-2">
                    <label t-att-for="'experiences_travail_%s' % exp_index">Travail réalisé</label>
                    <textarea class="form-control"
                              t-att-id="'experiences_travail_%s' % exp_index"
                              t-att-name="'experiences_travail_%s' % exp_index"
                              rows="3"><t t-esc="exp.get('travail') or ''"/></textarea>
                </div>

                <div class="mb-3">
                    <label t-att-for="'experiences_resultats_%s' % exp_index">Résultats obtenus</label>
                    <textarea class="form-control"
                              t-att-id="'experiences_resultats_%s' % exp_index"
                              t-att-name="'experiences_resultats_%s' % exp_index"
                              rows="2"><t t-esc="exp.get('resultats') or ''"/></textarea>
                </div>

                <!-- Environnement technique -->
                <h6 class="mt-3">Environnement technique</h6>

                <table class="table table-sm table-bordered mt-3">
                    <tbody>
                        <t t-foreach="skill_types['skill_types']" t-as="type">

                            <!-- competency lines for this type -->
                            <t t-set="type_code" t-value="type['code']"/>
                            <t t-set="pref_lines"
                               t-value="(exp.get('competencies') and exp.get('competencies').get(type_code)) or []"/>
                            <t t-set="lines_to_render"
                               t-value="pref_lines if pref_lines else [ {} ]"/>

                            <tr>
                                <th style="width: 30%;">
                                    <t t-esc="type['name']"/>
                                </th>
                                <td>
                                    <div class="competency-section"
                                         t-att-data-scope="'experiences_%s_%s' % (exp_index, type_code)"
                                         t-att-data-next-index="str(len(lines_to_render))">

                                        <div class="competency-lines">

                                            <t t-foreach="lines_to_render" t-as="pref_line">

                                                <div class="row mb-2 competency_line" t-att-data-index="pref_line_index">

                                                    <div class="col-7">
                                                        <select class="form-control skill-select rounded-pill"
                                                                t-att-name="'experiences_%s_%s_skill_id_%s' % (exp_index, type_code, pref_line_index)"
                                                                t-att-data-category="type['id']"
                                                                t-att-data-index="pref_line_index">
                                                            <option value="" disabled="true" t-att-selected="'selected' if not (pref_line and pref_line.get('skill_id')) else None">
                                                                Choisir une compétence
                                                            </option>

                                                            <!-- If prefilled, inject the selected option so Choices shows it -->
                                                            <t t-if="pref_line and pref_line.get('skill_id')">
                                                                <option t-att-value="pref_line['skill_id']" selected="selected">
                                                                    <t t-esc="pref_line.get('skill_name') or ''"/>
                                                                </option>
                                                            </t>
                                                        </select>
                                                    </div>

                                                    <div class="col-4">
                                                        <select class="form-control level-select rounded-pill"
                                                                t-att-name="'experiences_%s_%s_skill_level_%s' % (exp_index, type_code, pref_line_index)"
                                                                t-att-data-index="pref_line_index"
                                                                t-att-disabled="'disabled' if not (pref_line and pref_line.get('skill_id')) else None">
                                                            <option value="" disabled="true" t-att-selected="'selected' if not (pref_line and pref_line.get('skill_level_id')) else None">
                                                                Choisir un niveau
                                                            </option>

                                                            <t t-if="pref_line and pref_line.get('skill_level_id')">
                                                                <option t-att-value="pref_line['skill_level_id']" selected="selected">
                                                                    <t t-esc="pref_line.get('skill_level_name') or ''"/>
                                                                </option>
                                                            </t>
                                                        </select>
                                                    </div>

                                                    <div class="col-1 d-flex align-items-end">
                                                        <button type="button" class="btn btn-danger remove-line rounded-pill">×</button>
                                                    </div>

                                                </div>
                                            </t>

                                        </div>

                                        <div class="mt-3 mb-4">
                                            <button type="button" class="btn btn-sm btn-primary rounded-pill add-competency-line">
                                                + Ajouter une ligne
                                            </button>
                                        </div>

                                    </div>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>

            </div>
        </t>
    </div>

    <div class="mt-2">
        <button type="button" class="btn btn-sm btn-primary rounded-pill add-experience-line">
            + Ajouter une expérience
        </button>
    </div>
</div>



                    <div class="mt-4 text-end">
                        <button type="submit" class="btn btn-primary">
                                        Soumettre mon dossier
                        </button>
                    </div>
                </form>
            </div>
        </t>
    </template>


    <template id="dossier_thankyou" name="Thank you (Dossier)" t-name="achmitech_hr_recruitment.dossier_thankyou">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="oe_structure"/>
                <div id="dossier_thankyou" class="container">
                    <div class="row pt24 pb24">
                        <!-- Main content -->
                        <div class="col pt24 pb24 text-center">
                            <h1 class="fw-bolder">Merci !</h1>

                            <p class="fw-light pb24">
                                Votre dossier de compétences a été envoyé avec succès.<br class="mb-2"/>
                                Notre équipe reviendra vers vous dès que possible.
                            </p>

                            <!-- same image style (you can replace the src with your own asset) -->
                            <img class="img-fluid o_we_custom_image"
                                 style="width: 30% !important;"
                                 src="/website_hr_recruitment/static/src/img/job_congratulations.svg"
                                 alt="Merci"/>

                            <div class="row" id="dossier_thank_cta">
                                <div class="col-lg-12 text-center mt32 mb48">
                                    <p>
                                        <span class="h5 fw-light">En attendant,</span><br/>
                                        <span class="h3 mt8 mb32 fw-bold">Découvrez notre univers :</span>
                                    </p>

                                    <a role="button" href="/" class="btn btn-primary btn-lg">Accueil</a>
                                    <a role="button" href="https://www.achmitech.com/contact" class="btn btn-primary btn-lg ms-3">Contact</a>
                                    <a role="button" href="/jobs" class="btn btn-primary btn-lg ms-3">Offres</a>
                                </div>
                            </div>
                        </div>

                        <!-- Optional recruiter block (similar to Odoo default) -->
                        <t t-if="job_sudo and job_sudo.user_id">
                            <div class="col-lg-4 align-self-center ps-4 o_cc o_cc2 rounded">
                                <section class="s_text_block pt24" data-snippet="s_text_block" data-name="Text">
                                    <div class="container">
                                        <p class="text-center mb-0 fs-3 lead">Votre <b>contact</b> :</p>
                                    </div>
                                </section>

                                <section class="s_company_team pt12" data-snippet="s_company_team" data-name="Team">
                                    <div class="container-fluid">
                                        <div class="row justify-content-center">
                                            <div class="o_jobs_hr_recruiter col-10 o_cc o_cc1 mt24 p-4 border border-primary rounded shadow">
                                                <div class="row align-items-center">
                                                    <div class="col-lg-5 pb16 o_not_editable">
                                                        <img t-att-src="image_data_uri(job_sudo.user_id.avatar_256)"
                                                             class="img-fluid" loading="lazy"/>
                                                    </div>
                                                    <div class="col-lg-7 px-1">
                                                        <h2 class="text-truncate" t-field="job_sudo.user_id.name"/>
                                                        <p class="fw-light text-truncate" t-field="job_sudo.user_id.job_title"/>
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <ul class="list-unstyled mb-0">
                                                        <li t-if="job_sudo.user_id.work_phone">
                                                            <i class="fa fa-phone fa-fw me-2"></i>
                                                            <span class="o_force_ltr" t-field="job_sudo.user_id.work_phone"/>
                                                        </li>
                                                        <li class="d-inline-flex align-items-baseline">
                                                            <i class="fa fa-envelope fa-fw me-2"></i>
                                                            <span>
                                                                <a class="text-break"
                                                                   t-attf-href="mailto:#{job_sudo.user_id.email}"
                                                                   t-field="job_sudo.user_id.email"/>
                                                            </span>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </section>

                                <section class="s_text_block pt24" data-snippet="s_text_block" data-name="Text">
                                    <div class="container">
                                        <p class="lead alert px-0">
                                            Nous traitons généralement les dossiers sous <strong>quelques jours</strong>.<br/><br/>
                                            La prochaine étape peut être un appel ou un entretien.<br/><br/>
                                            Si besoin, vous pouvez contacter votre interlocuteur ci-dessus.
                                        </p>
                                    </div>
                                </section>
                            </div>
                        </t>

                    </div>
                </div>
                <div class="oe_structure"/>
            </div>
        </t>
    </template>
</odoo>
