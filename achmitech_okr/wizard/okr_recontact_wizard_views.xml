<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="okr_recontact_wizard_view_form" model="ir.ui.view">
        <field name="name">okr.recontact.wizard.form</field>
        <field name="model">okr.recontact.wizard</field>
        <field name="arch" type="xml">
            <form string="Enregistrer un recontact">
                <group>
                    <field name="applicant_id" readonly="1"/>
                    <field name="date" required="1"/>
                    <field name="outcome" required="1"/>
                    <field name="note" placeholder="Notes sur l'appel..."/>
                    <field name="referral_name" invisible="outcome != 'referral'"/>
                    <field name="referral_contact" invisible="outcome != 'referral'"/>
                    <field name="next_contact_date" invisible="outcome != 'callback'"/>
                </group>
                <footer>
                    <button name="action_confirm" type="object" string="Enregistrer" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
