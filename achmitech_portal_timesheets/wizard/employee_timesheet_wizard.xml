<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="employee_timesheet_selection_wizard_form" model="ir.ui.view">
        <field name="name">employee.timesheet.selection.wizard.form</field>
        <field name="model">employee.timesheet.wizard</field>
        <field name="arch" type="xml">
            <form string="Imprimer Rapport Feuilles de temps">
                <group>
                    <field name="project_id"
                        options="{'no_create': True, 'no_create_edit': True}"/>
                    <field name="task_id" 
                        invisible="not project_id"
                        options="{'no_create': True, 'no_create_edit': True}"/>
                    <field name="date_from" string="Date souhaitée" invisible="not task_id" widget="daterange" options="{&quot;end_date_field&quot;: &quot;date_to&quot;, &quot;always_range&quot;: &quot;1&quot;}" required="task_id"/>
                </group>

                <footer>
                    <button string="Télécharger" type="object" name="action_print_report" class="btn-primary"/>
                    <button string="Annuler" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_timesheet_interim_report_wizard" model="ir.actions.act_window">
        <field name="name">Rapport Feuilles de temps</field>
        <field name="res_model">employee.timesheet.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="employee_timesheet_selection_wizard_form" />
        <field name="target">new</field>
    </record>

</odoo>
